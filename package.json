{
  "name": "grommet-theme-hpe",
  "version": "0.4.0",
  "main": "dist/index.js",
  "module": "dist/es6/index.js",
  "jsnext:main": "dist/es6/index.js",
  "sideEffects": false,
  "description": "Hewlett Packard Enterprise theme for grommet",
  "authors": [
    "Alan Souza",
    "Bryan Jacquot",
    "Chris Carlozzi",
    "Eric Soderberg"
  ],
  "bugs": "https://github.com/grommet/grommet-theme-hpe/issues",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/grommet/grommet-theme-hpe.git"
  },
  "peerDependencies": {
    "styled-components": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "regenerator-runtime": "^0.12.1",
    "styled-components": "^4.0.0"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "cross-env babel ./src/js/ --ignore '__tests__' --out-dir ./dist --copy-files && cross-env BABEL_ENV=es6 babel ./src/js/ --ignore '__tests__' --out-dir ./dist/es6 --copy-files",
    "lint": "eslint src",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "testURL": "http://localhost/",
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.{js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|node_modules)[/\\\\]"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
